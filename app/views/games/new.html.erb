<h1>New Game</h1>
<div class="alphabet-container my-3">
  <% @letters.each do |letter| %>
    <div class="box"><strong><%= letter %></strong></div>
  <% end %>
</div>
<p>What is the longest word you can find?</p>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="answer" id="score">
  <input type="submit" value="Play">
  <%= hidden_field_tag "letters", @letters%>
  <%= hidden_field_tag "start_time", @start_time%>
</form>
